var slaying = true;
var youHit = Math.floor(Math.random() * 2);
var damageThisRound = Math.floor(Math.random()*5 + 1);
var totalDamage = 0

var slaying = true

while (slaying) {
    if (youHit == true) {
        console.log("Hey you hit the chicken");
        totalDamage += damageThisRound;
        if (totalDamage >= 4) {
            console.log("You just killed your pet chia");
            slaying = false;
            } else {
                youHit = Math.floor(Math.random() * 2);
                }
        } else {
            console.log("the chicken defeat you");
            }
    
    slaying = false;
    }
